{% extends "categorie.twig" %}

{% block title %}
	{{ title_page }}
{% endblock %}

{# BLOCK ASIDE #}
{% block aside %}

<aside>
	<div class="fixed_aside">
		<h3>Liste des animaux&nbsp;:</h3>
		<div class="fixed_aside_list">
			<ul class="sous-menu_categorie">
				{% for animal in all_animals %}
					<li><a href="#{{ animal.id }}">{{ animal.name }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
</aside>

{% endblock aside %}



{# BLOCK CHILD_MAIN #}
{% block child_main %}

<div class="child_main">
	{% for animal in all_animals %}
		<div class="card" id="{{ animal.id }}" data-aos="zoom-in-down" data-aos-duration="800" data-aos-anchor-placement="top-bottom">
			<h2>{{ animal.name }}</h2>
			{# main presentation #}
			<div class="card-main_presentation">
				{# left part -> PHOTO #}
				{% if animal.photo %}
				<div class="card-photo">
					<img src="{{ animal.photo }}" alt="{{ animal.name }}" width="320">
				</div>
				{% endif %}
				{# right part -> card informations #}
				<div class="container_effect">
					<div class="card-informations card-informations_effect">
						<h3>DÃ©tails</h3>
						<ul class="card-informations-details">
							{# HABITAT #}
							{% if animal.habitat %}
								<li><span>Habitat : </span>{{ animal.habitat }}</li>
							{% endif %}
							
							{# DESCRIPRION #}
							{% if animal.description %}
								<li><span>Descritpion : </span><p>{{ animal.description }}</p></li>
							{% endif %}
						</ul>
					</div>
				</div>
			</div>
		</div>
	{% endfor %}
</div>

{% endblock child_main %}