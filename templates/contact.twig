{% extends "base.twig" %}

{% block main %}
    <h2>{{ titre }}</h2>
    <p class="text_contact">{{ texte }}</p>

    <div class="form_area">
        {# SHOW DATA FORM #}
        {% if data_form %}
        <div>
            <h3>Affichage des données du formulaire :</h3>
            <div class="form_data">
                {% for key, value in data_form %}
                    {% if key == 'photo' %}
                        <p><span>{{ key }} : </span><img src="/images/uploads/{{ value }}" alt="{{ value }}"></p>
                    {% else %}
                        <p><span>{{ key }} : </span>{{ value }}</p>
                    {% endif %}
                {% endfor %}
            </div>
        </div>


        {% else %}
        {# FORMULAIRE #}
        <div> 
            <h3>Formulaire :</h3>
            <form method="post" action="./contact.php">
                <div class="form_2_col">
                    <div>
                        <label for="firstname">Prénom :</label>
                        <input type="text" id="firstname" name="firstname" required>
                    </div>
                    <div>
                        <label for="name">Nom :</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                </div>
                <div>
                    <label for="mail">Mail :</label>
                    <input type="email" id="mail" name="mail" required>
                </div>
                <div>
                    <label for="description">Message :</label>
                    <textarea id="description" name="description" rows="5" cols="33" required></textarea>
                </div>
                <div>
                    <label for="photo">Choisir une photo :</label>
                    <input type="file" id="photo" name="photo" accept="image/*" required>
                </div>
                <div class="form_btn">
                    <input type="submit" class="primary_btn" value="Envoyer le formulaire">
                </div>
            </form>
        </div>
        {% endif %}
    </div>


{% endblock main %}